//Programma che permette di ottenere il massimo e il minimo da un vettore.
#include <iostream.h>
#include <conio.h>
#include <ctype.h>
#include <stdlib.h>
void creo_vect(int A[100],int* n);
void orden_vect(int A[100], int* n);
void mostrar_vect(int A[100], int* n);
int A[100];
main()
{
int n;
creo_vect(&A[100] ,&n);
orden_vect(&A[100] ,&n);
mostrar_vect(&A[100] ,&n);
getch();
}
void creo_vect (int A[100],int* n)
{
int i;
char rpt;
randommize ();
cout<<"inserire il numero finale del vettore: ";
cout<<"\<valore massimo 100> ";cin>>*n;
cout<<"\Vuoi che il computer generi i numeri?;
[S] o [N]"cin>> rpt;
rpt=toupper (rpt);
if (rpt=='N')
             for(i=0; i<=(*n-1); i++)
             {cout<<"\Inserisci il <<i+1<< valore: <<"cin>> A[i];}
       else 
            for(i=0; i<=(*n-1); i++) 
      {A[i]=random(100)+1;
      cout<<"\introducendo il "<<i+1<<* valore: "<<[A[i];} 
cout<<"\i valori introucendo i vettori sono:" <<endl;
for(i=0;i<=(*n-1); i++)
               {cout<<""<<A[i]<<"  ";}
}
void orden_vect(int A[100],int* n)
{
int a,b,temp;
for(a=0; a<=(*n-1);a++)
          {
          for (b=a+1;b<=(*n-1);b++)
          {
       if (A[a] > A[b])
          {
          temp=A[a]
          A[a]= A[b]
          A[b]= temp;
          }
       }
    }
  }
  void mostra_vect (int A[100],int* n)
  {
  cout<<"\nil massimo valore e': "<<A [(*n-1)]<< "  .";
  cout<<"\nil minimo valore e': <<"A[0]<<"  .";
  }
  
  


      
      


